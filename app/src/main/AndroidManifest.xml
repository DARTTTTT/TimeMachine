<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wrg.timemachine">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".Ui.Appcontext"
        android:allowBackup="true"
        android:icon="@mipmap/time"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Ui.SecondActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--新闻详情-->
        <activity android:name=".Ui.NewsDetailActivity" />
        <!--网页图片-->
        <activity
            android:name=".Ui.ShowWebImageActivity"
            >


        </activity>
        <!--日报页面-->
        <activity android:name=".Ui.DayDailyActivity"/>
        <!--详情-->
        <activity android:name=".Ui.ThemeDetailActivity"/>
    </application>

</manifest>